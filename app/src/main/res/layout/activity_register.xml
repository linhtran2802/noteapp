<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#DBCDC0"
    tools:context=".RegisterActivity">

    <!-- Register Title -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="550dp">
        <ImageView
            android:id="@+id/cat"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/cat" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="62dp"
            android:background="@drawable/rounded_backr">

            <!-- Centered Title TextView -->
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/kalam_regular"
                android:text="ĐĂNG KÝ"
                android:textColor="#9B826C"
                android:textSize="30sp"
                android:textStyle="bold" />

            <!-- Email Input with Icon -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="120dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@id/usernameEditText"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/img" />

                <EditText
                    android:id="@+id/usernameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="16dp"
                    android:fontFamily="@font/kalam_regular"
                    android:hint="Username"
                    android:minHeight="48dp"
                    android:padding="16dp"
                    android:textColor="#9B826C"
                    android:singleLine="true"
                    android:scrollHorizontally="true" />
            </RelativeLayout>

            <!-- Password Input with Eye Icon -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="180dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@id/emailEditText"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/img" />

                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:textColor="#9B826C"
                    android:padding="16dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/kalam_regular"
                    android:textSize="16dp"
                    android:singleLine="true"
                    android:scrollHorizontally="true" />


                <!-- Eye Icon -->
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="240dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/icon3"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@id/phoneEditText"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/img" />

                <EditText
                    android:id="@+id/phoneEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone"
                    android:textColor="#9B826C"
                    android:padding="16dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/kalam_regular"
                    android:textSize="16dp"
                    android:singleLine="true"
                    android:scrollHorizontally="true" />


                <!-- Eye Icon -->
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="300dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/icon4"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@id/passwordEditText"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/img" />

                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="#9B826C"
                    android:padding="16dp"
                    android:minHeight="48dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/kalam_regular"
                    android:layout_alignParentStart="true"
                    android:textSize="16dp"
                    android:singleLine="true"
                    android:scrollHorizontally="true" />


                <!-- Eye Icon -->
                <ImageView
                    android:id="@+id/eyeIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/close_view" />
            </RelativeLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/catblack"
            android:layout_width="155dp"
            android:layout_height="110dp"
            android:layout_marginStart="245dp"
            android:layout_marginTop="435dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/cat_black" />
    </RelativeLayout>
    <Button
        android:id="@+id/registerButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Đăng ký"
        android:textColor="#9B826C"
        android:backgroundTint="#F9F5EE"
        android:fontFamily="@font/kalam_bold"
        android:layout_marginBottom="8dp"  />

    <!-- Login Link -->
    <TextView
        android:id="@+id/loginLinkTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bạn đã có tài khoản? Đăng Nhập"
        android:textColor="#1E90FF"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />

</LinearLayout>
